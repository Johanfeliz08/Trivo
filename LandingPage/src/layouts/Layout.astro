import "../styles/global.css";

---

<!doctype html>
<html lang="en">
	<head>
		  <!-- Meta SEO básicos -->
		<title>Trivo | Donde el talento se encuentra con la oportunidad</title>
		<meta name="description" content="Trivo es la plataforma profesional de networking que conecta a expertos y empresas de forma ágil, humana y moderna. Encuentra el talento o la oportunidad ideal.">
		<meta name="keywords" content="networking, empleo, profesionales, expertos, empresas, talento, oportunidades, trivo, contratar, conectar, colaboración">
		<meta name="author" content="Trivo Team">

		  <!-- Open Graph (para Facebook y LinkedIn) -->
		<meta property="og:type" content="website">
		<meta property="og:title" content="Trivo | Conecta con talento y oportunidades reales">
		<meta property="og:description" content="Descubre una nueva forma de hacer networking profesional. En Trivo, encuentra expertos o empresas afines y comienza a colaborar.">
		<meta property="og:image" content="/og-image.jpg"> <!-- 1200x630 recomendado -->
		<meta property="og:url" content="https://trivo.app">

		 <!-- Twitter Card -->
		<meta name="twitter:card" content="summary_large_image">
		<meta name="twitter:title" content="Trivo | Donde el talento se encuentra con la oportunidad">
		<meta name="twitter:description" content="La plataforma que une expertos y empresas para colaborar en proyectos profesionales.">
		<meta name="twitter:image" content="/og-image.jpg">

		  <!-- Viewport & charset -->
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<meta name="generator" content={Astro.generator} />


		  <!-- Favicon y variantes -->
		<link rel="apple-touch-icon" sizes="180x180" href="/favicons/apple-touch-icon.png">
		<link rel="icon" type="image/png" sizes="16x16" href="/favicons/favicon-16x16.png">
		<link rel="icon" type="image/png" sizes="192x192" href="/favicons/android-chrome-192x192.png">
		<link rel="icon" type="image/png" sizes="512x512" href="/favicons/android-chrome-512x512.png">
		<link rel="icon" type="image/png" sizes="any" href="/favicons/favicon.ico">
		<link rel="manifest" href="/favicons/site.webmanifest">
		<meta name="msapplication-TileColor" content="#ffffff">
		<meta name="theme-color" content="#ffffff">
		
	</head>
	<body>
		<slot />
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}
